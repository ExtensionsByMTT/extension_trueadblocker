{
  "name": "TrueAdBlocker",
  "description": "TrueAdBlocker",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "TrueAdBlocker16x16.png",
    "48": "TrueAdBlocker48x48.png",
    "128": "TrueAdBlocker128x128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "TrueAdBlocker",
    "default_icon": "TrueAdBlocker16x16.png",
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'unsafe-inline';"
    }
  },
  "permissions": ["declarativeNetRequest", "storage", "scripting", "tabs"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'unsafe-inline';"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected/*", "lib/*"],
      "matches": ["https://open.spotify.com/*"]
    }
  ]
}
